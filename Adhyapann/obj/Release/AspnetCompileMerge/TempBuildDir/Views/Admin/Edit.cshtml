<div class="container">
    <form id="contact" action="../UpdatePackage" method="post">
        @*formaction='@Url.Action("UpdatePackage", "Admin")'*@
        <p>@ViewBag.resultEdit</p>
        <h3>Edit Package</h3>
        <br />
        <div id="divPackage" style="@(@ViewBag.resultEdit==null ? "display:block" : "display:none")">

            <input type="hidden" value="@Model.lstPackages[0].Package_ID" name="Package_ID" id="Package_ID" />
            <div class="form-group">
                <label for="Package_Name">Package Name :</label>
                <input placeholder="Name" type="text" tabindex="1" name="Package_Name" id="Package_Name" value="@Model.lstPackages[0].Package_Name" required pattern=".*\S+.*" title="This field is required" autofocus>
            </div>

            <div class="form-group">
                <label for="Package_Code">Package Code:</label>
                <input placeholder="Package Code" type="text" tabindex="3" name="Package_Code" id="Package_Code" value="@Model.lstPackages[0].Package_Code" required pattern=".*\S+.*" title="This field is required">
            </div>
            <div class="form-group">
                <label for="Shared">Package Group:</label>
                @Html.DropDownList("Package_ClassGroup", (SelectList)ViewBag.PackageGroup, new { required = (string)null })

            </div>
            <div class="form-group">
                <label for="Package_Password">Package Password:</label>
                <input placeholder="Package Password" type="text" tabindex="4" name="Package_Password" id="Package_Password" value="@Model.lstPackages[0].Package_Password" required pattern=".*\S+.*" title="This field is required">
            </div>
            <div class="form-group">
                <label for="Shared">Share to user:</label>
                @Html.DropDownList("Shared_ID", (SelectList)ViewBag.Shared, new { required = (string)null })
                @*<select id="Shared" name="Shared">
                <option>Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>*@
            </div>
            <div class="form-group">
                <label for="Price">Price(INR):</label>
                <input placeholder="Price" type="text" tabindex="6" name="Price" id="Price" value="@Model.lstPackages[0].Price" required pattern=".*\S+.*" title="This field is required">
            </div>
            <div class="form-group">
                <label for="Username">Email Result To User:</label>
                @Html.DropDownList("EmailDecision_ID", (SelectList)ViewBag.EmailResult, new { required = (string)null })
            </div>
            <div class="form-group">
                <label for="Test_Name">Associated Tests:</label>
                @Html.ListBox("Test_Name", (MultiSelectList)ViewBag.Tests, new { required = (string)null })
            </div>
            <button name="submit" type="submit" id="package-edit" data-submit="...Sending">Edit</button>
            @*<select id="EmailResults" name="Email_Result_ToUser">
