                .s01 .inner-form .input-field.third-wrap {
                    width: 180px;
                    margin-right: 0;
                }

                    .s01 .inner-form .input-field.third-wrap .btn-search {
                        height: 100%;
                        width: 100%;
                        background: #4272d7;
                        white-space: nowrap;
                        border-radius: .5px;
                        font-size: 20px;
                        color: #fff;
                        transition: all .2s ease-out, color .2s ease-out;
                        border: 0;
                        cursor: pointer;
                    }

                        .s01 .inner-form .input-field.third-wrap .btn-search:hover {
                            background: #2d62d3;
                        }

    @@media screen and (max-width: 992px) {
        .s01 legend {
            font-size: 50px;
            text-align: center;
            margin-bottom: 50px;
        }

        .s01 .inner-form {
            padding: 30px 35px;
        }

            .s01 .inner-form .input-field {
                height: 50px;
            }
