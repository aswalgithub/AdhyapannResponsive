@model DataAccessLayer.Package
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script type="text/javascript">

        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>

    <!-- Icons font CSS-->
    <link href="~/wwwroot/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/wwwroot/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <!-- Vendor CSS-->
    <link href="~/wwwroot/css/select2.min.css" rel="stylesheet" media="all">
    <link href="~/wwwroot/css/daterangepicker.css" rel="stylesheet" media="all">
    <script src="~/wwwroot/js/Student.js" type="text/javascript"></script>

    <!-- Main CSS-->
    <link href="~/wwwroot/css/Register.css" rel="stylesheet" media="all">
</head>

<body>
  
    <div class="hover_bkgr_fricc" >
        <span class="helper"></span>
        <div style="border-style: solid;  border-color: coral;">
            <div class="popupCloseButton">&times;</div>
            <div  id="divValidation">
                <span id="ValidationMessage"></span>

            </div>
        </div>
    </div>
    <div class="page-wrapper p-t-100 p-b-100 font-robo">
        <div class="wrapper wrapper--w680">
            <div class="card card-1">

                <div class="card-body">
                    <h2 style="text-align:center;font-size:25px;color:white !important;">Package : @Model.Package_Name</h2>

                    
                    <form id="frmRegister" method="POST" action="~/Student/SaveStudentDetails">
                        <div class="container" style="border: groove">
                            <input type="hidden" id="Package_ID" name="Package_ID" value="@Model.Package_ID">
                            <input type="hidden" id="Package_Name" name="Package_Name" value="@Model.Package_Name">
                            <fieldset><legend style="color:white !important">Student Information</legend></fieldset>
                            <div class="box">
                                @*<h2 class="title" style="text-align:left ;font-size:20px">Student Information</h2>*@
                                <div class="box-row">

                                    <div class="box-cell box1">
                                        <div class="input-group" style="border:solid">
                                            <input class="input--style-1" type="text" placeholder="NAME" name="Name" id="Name" required pattern=".*\S+.*" title="This field is required" autofocus>
                                        </div>


                                        <div class="input-group" style="border:solid">
                                            <input class="input--style-1" type="text" placeholder="EMAIL ID" name="Email_ID" id="Email_ID" required pattern=".*\S+.*" title="This field is required">
                                        </div>

                                        <div class="input-group">
                                            <div class="rs-select2 js-select-simple select--no-search">
                                                <select name="Gender" id="Gender" required>
                                                    <option value="" disabled="disabled" selected="selected">GENDER</option>
                                                    <option>Male</option>
                                                    <option>Female</option>

                                                </select>
                                                <div class="select-dropdown"></div>
                                            </div>
                                        </div>

                                        <div class="input-group" style="border:solid">
                                            <input class="input--style-1" type="password" data-type="password" placeholder="PASSWORD" name="Password" id="password1" required pattern=".*\S+.*" title="This field is required">
                                            <input type="hidden" id="password2" value="@Model.Package_Password" />

                                        </div>
                                        <p id="validate-status"></p>

                                    </div>
                                    <div class="box-cell box2">
                                        <div class="input-group" style="border:solid">
                                            <input class="input--style-1" type="text" placeholder="SCHOOL NAME" name="School_Name" id="school_Name" required pattern=".*\S+.*" title="This field is required">
                                        </div>
                                        <div class="input-group" style="border:solid">
                                            <input class="input--style-1 js-datepicker" type="text" placeholder="BIRTHDATE" name="DOB" id="DOB" required pattern=".*\S+.*" title="This field is required">
                                            <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                        </div>

                                        <div class="input-group" style="border:solid groove">
                                            <div class="rs-select2 js-select-simple select--no-search" >
                                                <select name="Class" id="Class" required>
                                                    <option value="" disabled="disabled" selected="selected">CLASS</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 8-12" ? "hidden='hidden'" : "")>1</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 8-12" ? "hidden='hidden'" : "")>2</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 8-12" ? "hidden='hidden'" : "")>3</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 8-12" ? "hidden='hidden'" : "")>4</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 8-12" ? "hidden='hidden'" : "")>5</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 8-12" ? "hidden='hidden'" : "")>6</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 8-12" ? "hidden='hidden'" : "")>7</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 1-7" ? "hidden='hidden'" : "")>8</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 1-7" ? "hidden='hidden'" : "")>9</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 1-7" ? "hidden='hidden'" : "")>10</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 1-7" ? "hidden='hidden'" : "")>11</option>
                                                    <option @Html.Raw(Model.Package_ClassGroup == "CLASS 1-7" ? "hidden='hidden'" : "")>12</option>



                                                </select>
                                                <div class="select-dropdown"></div>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>
                            <p align="center">
                                <button class="btn btn--radius btn--green" id="btnRegisterStudent" name="initiateTest" type="button" style="text-align:center;margin:5px">Start Test</button>
                                <button class="btn btn--radius btn--green" id="btnBack" type="button" style="text-align:right;margin:5px" onclick="location.href='@Url.Action("Home", "Student")'">Back</button>
                            </p>
                        </div>

                        <div class="container" style="border: groove">
                            <fieldset><legend style="color:white !important">Enter the details to resume Test</legend></fieldset>
                            <div class="box">
                                @*<h2 class="title" style="text-align:left ;font-size:20px">Enter the details to resume the Test</h2>*@
                                <div class="box-row">

                                    <div class="box-cell box1">
                                        <div class="input-group" style="border:solid">
                                            <input class="input--style-1" type="text" placeholder="REFERENCE ID" name="referenceID" id="referenceID" required pattern=".*\S+.*" title="This field is required" autofocus>
                                        </div>






                                    </div>
                                    <div class="box-cell box2">
                                        <div class="input-group" style="border:solid">
                                            <input class="input--style-1" type="password" data-type="password" placeholder="PASSWORD" name="Password_resume" id="password1_resume" required pattern=".*\S+.*" title="This field is required">
                                            <input type="hidden" id="password2_resume" value="@Model.Package_Password" />

                                        </div>
                                        <p id="validate-status"></p>


                                    </div>

                                </div>

                            </div>
                            <p align="center">
                                <button class="btn btn--radius btn--green" id="btnResumeTest" name="initiateTest" type="button" style="text-align:center;margin:5px">Resume Test</button>

                            </p>
                        </div>

                    </form>

                </div>


            </div>
        </div>
    </div>


    <!-- Jquery JS-->
    <script src="~/wwwroot/js/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/wwwroot/js/select2.min.js"></script>
    <script src="~/wwwroot/js/moment.min.js"></script>
    <script src="~/wwwroot/js/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/wwwroot/js/global.js"></script>
    <script src="~/wwwroot/js/Student.js"></script>

</body>

</html>
<!-- end document-->
